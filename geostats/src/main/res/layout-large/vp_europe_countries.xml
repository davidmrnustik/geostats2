<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ScrollView">
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

	    <TextView 
		 	android:layout_width="wrap_content"
		 	android:layout_height="wrap_content"
			android:text="@string/NumberOfCountries"/>
		<TextView 
			android:layout_width="wrap_content"
		 	android:layout_height="wrap_content"
			android:text="@string/NumberOfCountriesRecordEurope"/>
		
	    <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/LargestCountries"/>
		
		<include layout="@layout/inc_europe_countries"/>
		
		<TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/LargestEUCountries"/>
		
		<include layout="@layout/inc_europe_eu_countries"/>
	
    </LinearLayout>
</ScrollView>