<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ScrollView">
	<LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
		<TableLayout style="@style/TableLayout"
		    android:shrinkColumns="0">
		    
			<TableRow style="@style/TableRow">
		     <TextView 
		       	style="@style/TableTextView"
		         android:text="@string/Population"/>
		     <TextView 
		         style="@style/TableTextView.GravityRight"
		         android:text="@string/PopulationRecordEurope"/>
			 </TableRow>
			 <TableRow style="@style/TableRow">
			     <TextView 
			       	style="@style/TableTextView"
			         android:text="@string/PercentOfPopulation"/>
			     <TextView 
			         style="@style/TableTextView.GravityRight"
			         android:text="@string/PercentOfPopulationRecordEurope"/>
			 </TableRow>
			 <TableRow style="@style/TableRow">
			     <TextView 
			       	style="@style/TableTextView"
			         android:text="@string/DensitySqKm"/>
			     <TextView 
			         style="@style/TableTextView.GravityRight"
			         android:text="@string/DensitySqKmRecordEurope"/>
			 </TableRow>
            <TableRow style="@style/TableRow.Span">
                <TextView
                    android:layout_span="2"
                    style="@style/TextViewTitle"
                    android:text="@string/MostPopulatedCountries"/>
            </TableRow>
		</TableLayout>

		<include layout="@layout/inc_europe_population"/>

        <TableLayout style="@style/TableLayout"
            android:shrinkColumns="0">
            <TableRow style="@style/TableRow.Span">
                <TextView
                    android:layout_span="2"
                    style="@style/TextViewTitle"
                    android:text="@string/MostPopulatedEUCountries"/>
            </TableRow>
        </TableLayout>
		<include layout="@layout/inc_europe_eu_population"/>
		
	</LinearLayout>
</ScrollView>