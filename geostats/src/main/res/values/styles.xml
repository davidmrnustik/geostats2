<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
    </style>

    <color name="colorFFF">#FFF</color>
    <color name="colorCCC">#CCC</color>
    <color name="colorBBB">#ffbbbbbb</color>
    <color name="colorDarkGrey">#616161</color>
    <color name="color000">#000</color>
    <color name="colorDarkGreyActionBar">#606060</color>
    <color name="colorShadow">#f3f3f3</color>
    <color name="colorTransparent">#00000000</color>
    <color name="colorTdBg">#fafafa</color>
    <color name="colorThBg">#dfdfdf</color>
    <color name="colorTdStroke">#e3e3e3</color>
    <color name="colorThStroke">@color/colorTdStroke</color>
    <color name="colorTableBg">@color/colorTdStroke</color>
    <color name="colorScrollView">@color/colorTdBg</color>
    <color name="colorDialogTitleBg">#3d3d3d</color>
    <color name="colorDialogTitleText">@color/colorTdBg</color>
    <color name="colorF2F2F2">#f2f2f2</color>
    <color name="color8E8E8E">#8e8e8e</color>
    <color name="colorLogoBlue">#6caadc</color>

    <style name="Main" parent="@style/Theme.AppCompat">
        <item name="android:background">@drawable/bg_body_pattern</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="FullScreen" parent="@style/Theme.AppCompat">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.PageIndicatorDefaults" parent="@style/Theme.AppCompat.Light">
        <item name="vpiIconPageIndicatorStyle">@style/Widget.IconPageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/MyTabPageIndicator</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="android:actionBarTabBarStyle">@style/MyActionBarTabBar</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="actionBarTabBarStyle">@style/MyActionBarTabBar</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTabTextStyle</item>
        <item name="homeAsUpIndicator">@drawable/my_abc_ic_ab_back_holo_light</item>
        <item name="actionBarItemBackground">@drawable/bg_actionbar_tabview_pattern</item>
    </style>
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/bg_actionbar_unselected</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:shadowColor">@color/colorShadow</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">0</item>
    </style>
    <style name="MyActionBarTabBar" parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <item name="background">@drawable/bg_actionbar</item>
        <item name="divider">@drawable/bg_actionbar_divider2</item>
        <item name="dividerPadding">0dp</item>
    </style>
    <style name="MyActionBarTabs" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/bg_actionbar</item>
        <item name="background">@drawable/bg_actionbar</item>
    </style>
    <style name="MyActionBarTabTextStyle" parent="Widget.AppCompat.Light.ActionBar.TabText">
        <item name="android:textColor">@color/colorDarkGreyActionBar</item>
        <item name="android:shadowColor">@color/colorShadow</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">0</item>
    </style>
    <style name="MyTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/vptab</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:paddingLeft">17dip</item>
        <item name="android:paddingRight">17dip</item>
        <item name="android:layout_margin">0dp</item>
    </style>
    <style name="FrameLayoutBody">
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/bg_content</item>
    </style>

    <style name="FrameLayoutBody.Container">
        <item name="android:padding">12dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">7dp</item>
    </style>
    <style name="FrameLayoutBody.VPI">
        <item name="android:padding">0dp</item>
    </style>
    <style name="TextViewAbout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:color">@color/colorDarkGrey</item>
        <item name="android:background">@color/colorScrollView</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>

    </style>
    <style name="AboutLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <style name="TableLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorTableBg</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:stretchColumns">0</item>
    </style>
    <style name="TableLayout.Shrink">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:shrinkColumns">0</item>
        <item name="android:stretchColumns">1</item>
    </style>
    <style name="TableRow">
        <item name="android:background">@color/colorThBg</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>
    <style name="TableRow.Span">
        <item name="android:paddingBottom">0dp</item>
    </style>
    <style name="TableTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@color/colorTdBg</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="TableTextView.Italic">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorBBB</item>
    </style>
    <style name="TableTextView.PaddingBottom0">
        <item name="android:paddingBottom">0dp</item>
    </style>
    <style name="TableTextView.PaddingTop0">
        <item name="android:paddingTop">0dp</item>
    </style>
    <style name="TableTextView.PaddingBottom0.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TableTextView.RowSpan">
        <item name="android:paddingTop">0dp</item>
    </style>
    <style name="TableTextView.RowSpan.Italic">
        <item name="android:textStyle">italic</item>
    </style>
    <style name="TableTextView.Head">
        <item name="android:background">@color/colorThBg</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TableTextView.GravityRight">
        <item name="android:gravity">right</item>
    </style>
    <style name="TableTextView.GravityRight.PaddingTop0">
        <item name="android:paddingTop">0dp</item>
    </style>
    <style name="TableTextView.PaddingTop0.PaddingBottom0">
        <item name="android:paddingBottom">0dp</item>
    </style>
    <style name="TableTextView.GravityRight.RowSpan">
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>
    <style name="TableTextView.GravityRight.Button">
        <item name="android:background">@drawable/table_button</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center|right</item>

    </style>
    <style name="TableTextView.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ScrollView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:fillViewport">false</item>
        <item name="android:background">@color/colorScrollView</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:scrollbars">none</item>
    </style>
    <style name="ScrollView.NoMargin">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:fillViewport">true</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="TextViewTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/colorDialogTitleBg</item>
        <item name="android:textColor">@color/colorDialogTitleText</item>
    </style>
    <style name="ViewDivider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/colorFFF</item>
    </style>
    <style name="DialogContinents" parent="@android:style/Theme.Dialog">
        <item name="android:background">@color/colorDialogTitleBg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/colorDialogTitleText</item>
    </style>
    <style name="DialogChartNo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorBBB</item>
    </style>
    <style name="DialogChartNo.Inverse">
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>
    <style name="DialogTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorDialogTitleText</item>
    </style>
    <style name="ButCloseDialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:background">@drawable/dialog_close</item>
    </style>
    <style name="ImageViewMap">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/colorFFF</item>
        <item name="android:scaleType">matrix</item>
    </style>
    <style name="ImageViewMap.Land">
        <item name="android:layout_marginTop">6dp</item>
    </style>
    <style name="ImageViewMapBasicLand">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="ImageViewMapLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="ImageViewMapLandLarge">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="MainButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:shadowColor">@color/colorF2F2F2</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">0</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MainButtons.Main">
        <item name="android:width">150dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>
   <style name="MainButtons.Sub" parent="MainButtons">
       <item name="android:paddingTop">8dp</item>
       <item name="android:paddingBottom">8dp</item>
       <item name="android:layout_marginTop">8dp</item>
       <item name="android:layout_marginRight">8dp</item>
   </style>
    <style name="FragmentButtons" parent="MainButtons.Sub">
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>
    <style name="FragmentButtons.SmallPadding">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

</resources>
