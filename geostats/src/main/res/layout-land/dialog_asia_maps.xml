<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ScrollView.NoMargin">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/DialogTitle"
            android:text="@string/Asia"
            android:paddingRight="10dp"
            android:id="@+id/dTitle"/>

        <Button
            style="@style/ButCloseDialog"
            android:id="@+id/btClose"/>

        <RadioGroup
            android:layout_toRightOf="@id/dTitle"
            style="@style/RadioGroupMap"
            android:id="@+id/rgMap">

            <RadioButton
                android:id="@+id/rbMap1"
                style="@style/RadioButtonMap"
                android:checked="true"
                android:text="@string/PhysicalMap"/>
            <RadioButton
                style="@style/RadioButtonMap"
                android:id="@+id/rbMap2"
                android:layout_marginLeft="8dp"
                android:singleLine="true"
                android:text="@string/MiddleEastPhysical"/>

        </RadioGroup>

        <ImageView
            android:id="@+id/ivMap"
            style="@style/ImageViewMap"
            android:layout_below="@+id/rgMap"
            android:contentDescription="@string/Asia"/>

        <TextView
            style="@style/DialogChartNo.Inverse"
            android:layout_below="@+id/rgMap"
            android:id="@+id/imageNo"
            android:text="@string/ImageAsiaPhysical"/>

    </RelativeLayout>
</RelativeLayout>