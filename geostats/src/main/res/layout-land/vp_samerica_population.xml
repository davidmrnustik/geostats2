<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ScrollView">

   <TableLayout style="@style/TableLayout"
	    android:shrinkColumns="0">
	    
		<TableRow style="@style/TableRow">
	     <TextView 
	       	style="@style/TableTextView"
	         android:text="@string/Population"/>
	     <TextView 
	         style="@style/TableTextView.GravityRight"
	         android:text="@string/PopulationRecordSAmerica"/>
		 </TableRow>
		 <TableRow style="@style/TableRow">
		     <TextView 
		       	style="@style/TableTextView"
		         android:text="@string/PercentOfPopulation"/>
		     <TextView 
		         style="@style/TableTextView.GravityRight"
		         android:text="@string/PercentOfPopulationRecordSAmerica"/>
		 </TableRow>
		 <TableRow style="@style/TableRow">
		     <TextView 
		       	style="@style/TableTextView"
		         android:text="@string/DensitySqKm"/>
		     <TextView 
		         style="@style/TableTextView.GravityRight"
		         android:text="@string/DensitySqKmRecordSAmerica"/>
		 </TableRow>
		 <TableRow style="@style/TableRow">
             <TextView
                 style="@style/TableTextView"
                 android:text="@string/MostPopulatedCountries"/>
		     <Button 
                  style="@style/TableTextView.GravityRight.Button"
                  android:text="@string/ShowTable"
                  android:id="@+id/btDialog1"/>
		 </TableRow>
	</TableLayout>
</ScrollView>