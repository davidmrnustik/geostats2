		        </TableLayout>
			    <TextView 
		          	style="@style/TableTextView.GravityRight"
		            android:layout_span="2"
		            android:text="@string/PuertoRicoTrenchRecord"/>
		    </TableRow>
		    
		    <TableRow style="@style/TableRow">
		        <TableLayout android:stretchColumns="0">
		            <TableRow>
				        <TextView 
				          	style="@style/TableTextView.PaddingBottom0"
				            android:text="@string/PeruChileTrench"/>
		   			</TableRow>
		   			<TableRow>
				        <TextView 
				          	style="@style/TableTextView.RowSpan"
				            android:text="@string/AtlanticOcean"/>
