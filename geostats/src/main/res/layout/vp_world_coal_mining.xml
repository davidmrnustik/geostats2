		    </TableRow>
		    <TableRow style="@style/TableRow">
		        <TextView 
		          	style="@style/TableTextView"
		            android:text="@string/Poland"/>
		        <TextView 
		            style="@style/TableTextView.GravityRight"
		            android:text="@string/CoalProductionWorld09"/>
		    </TableRow>
		    <TableRow style="@style/TableRow">
		        <TextView 
		          	style="@style/TableTextView"
		            android:text="@string/Kazakhstan"/>
		        <TextView 
		            style="@style/TableTextView.GravityRight"
		            android:text="@string/CoalProductionWorld10"/>
		    </TableRow>
		</TableLayout>
		<TextView
	        android:id="@+id/chartNo"
	      	style="@style/TableTextView.Italic"
	        android:text="@string/ChartWorldTotalPrimaryCoalProduction"/>
	</LinearLayout>
</ScrollView>