<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ScrollView">

    <TableLayout style="@style/TableLayout"
        android:shrinkColumns="0">
        <TableRow style="@style/TableRow.Span">
	        <TextView
	            android:layout_span="2"
	          	style="@style/TextViewTitle"
	            android:text="@string/LargestIslands"/>
	    </TableRow>
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView.Head"
	            android:text="@string/Name"/>
	        <TextView 
	            style="@style/TableTextView.Head"
	            android:text="@string/TotalSqKm"/>
	    </TableRow>
	    
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/Borneo"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/LargestIslandsAsia01"/>
	    </TableRow>
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/Sumatra"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/LargestIslandsAsia02"/>
	    </TableRow>
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/Honshu"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/LargestIslandsAsia03"/>
	    </TableRow>
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/Celebes"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/LargestIslandsAsia04"/>
	    </TableRow>
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/Java"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/LargestIslandsAsia05"/>
	    </TableRow>
	    <TableRow style="@style/TableRow.Span">
 		   <TextView
		        android:id="@+id/chartNo"
		        android:layout_span="2"
		      	style="@style/TableTextView.Italic"
		        android:text="@string/ChartAsiaLargestIslands"/>
	    </TableRow>
	</TableLayout>
</ScrollView>