<merge xmlns:android="http://schemas.android.com/apk/res/android">
	<TableLayout
       	style="@style/TableLayout"
        android:layout_below="@+id/dTitle"
        android:shrinkColumns="0">
		    
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/TotalArea"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/TotalAreaRecordSouthernO"/>
	    </TableRow>
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/Volume"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/VolumeRecordSouthernO"/>
	    </TableRow>
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/AverageDepth"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/AverageDepthRecordSouthernO"/>
	    </TableRow>
	    
	    <TableRow
	        style="@style/TableRow.Span">
	        <TextView 
	            style="@style/TableTextView.Bold"
	            android:layout_span="2"
	            android:text="@string/DeepestPoint"/>
	    </TableRow>
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView.RowSpan"
	            android:text="@string/SouthSandwichTrench"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight.RowSpan"
	            android:text="@string/DeepestPointRecordSouthernO"/>
	    </TableRow>
        <TableRow style="@style/TableRow.Span">
            <TextView
                android:id="@+id/chartNo"
                android:layout_span="2"
                style="@style/TableTextView.Italic"
                android:text="@string/ChartSouthernOBasic"/>
        </TableRow>
	</TableLayout>
</merge>