<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ScrollView">

    <TableLayout
	    style="@style/TableLayout"
	       android:shrinkColumns="0">
	       
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView.Head"
	            android:text="@string/Name"/>
	        <TextView 
	            style="@style/TableTextView.Head"
	            android:text="@string/Length"/>
	        <TextView 
	            style="@style/TableTextView.Head"
	            android:text="@string/Width"/>
	    </TableRow>
	    
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/StraitOfMalacca"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/StraitOfMalaccaLength"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/StraitOfMalaccaWidth"/>
	    </TableRow>
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/StraitOfHormuz"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/StraitOfHormuzLength"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/StraitOfHormuzWidth"/>
	    </TableRow>
	    <TableRow style="@style/TableRow.Span">
 		   <TextView
		        android:id="@+id/chartNo"
		        android:layout_span="3"
		      	style="@style/TableTextView.Italic"
		        android:text="@string/ChartNo"/>
	    </TableRow>
	</TableLayout>
</ScrollView>