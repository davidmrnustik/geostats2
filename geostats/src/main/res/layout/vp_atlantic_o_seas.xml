<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ScrollView">

    <TableLayout
	    style="@style/TableLayout"
	       android:shrinkColumns="0">
	       
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView.Head"
	            android:text="@string/Name"/>
	        <TextView 
	            style="@style/TableTextView.Head"
	            android:text="@string/TotalSqKm"/>
	    </TableRow>
	    
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/CaribbeanSea"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/LargestSeasAtlanticO01"/>
	    </TableRow>
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/MediterraneanSea"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/LargestSeasAtlanticO02"/>
	    </TableRow>
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/GulfOfMexico"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/LargestSeasAtlanticO03"/>
	    </TableRow>
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/NorwegianSea"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/LargestSeasAtlanticO04"/>
	    </TableRow>
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/HudsonBay"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/LargestSeasAtlanticO05"/>
	    </TableRow>
	    <TableRow style="@style/TableRow.Span">
 		   <TextView
		        android:id="@+id/chartNo"
		        android:layout_span="2"
		      	style="@style/TableTextView.Italic"
		        android:text="@string/ChartAtlanticOSeas"/>
	    </TableRow>
	</TableLayout>
</ScrollView>