	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/RybinskoyeVodokhranilishche"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/LargestLakesEurope05"/>
	    </TableRow>
