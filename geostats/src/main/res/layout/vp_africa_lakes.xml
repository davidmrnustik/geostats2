<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ScrollView">
	    
    <TableLayout style="@style/TableLayout"
        android:shrinkColumns="0">
        <TableRow style="@style/TableRow.Span">
	        <TextView
	            android:layout_span="2"
	          	style="@style/TextViewTitle"
	            android:text="@string/LargestLakes"/>
	    </TableRow>
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView.Head"
	            android:text="@string/Name"/>
	        <TextView 
	            style="@style/TableTextView.Head"
	            android:text="@string/TotalSqKm"/>
	    </TableRow>
	    
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/LakeVictoria"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/LargestLakesAfrica01"/>
	    </TableRow>
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/LakeTanganyika"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/LargestLakesAfrica02"/>
	    </TableRow>
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/LakeNyasa"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/LargestLakesAfrica03"/>
	    </TableRow>
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/LakeVolta"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/LargestLakesAfrica04"/>
	    </TableRow>
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/LakeTurkana"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/LargestLakesAfrica05"/>
	    </TableRow>
	    <TableRow style="@style/TableRow.Span">
 		   <TextView
		        android:id="@+id/chartNo"
		        android:layout_span="2"
		      	style="@style/TableTextView.Italic"
		        android:text="@string/ChartAfricaLargestLakes"/>
	    </TableRow>
	</TableLayout>
</ScrollView>