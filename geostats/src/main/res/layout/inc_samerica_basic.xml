<merge xmlns:android="http://schemas.android.com/apk/res/android">
	<TableLayout
	    style="@style/TableLayout"
        android:layout_below="@+id/chartNo"
		android:shrinkColumns="0">		    
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/TotalLandArea"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/TotalLandAreaRecordSAmerica"/>
	    </TableRow>
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/LandArea"/>
