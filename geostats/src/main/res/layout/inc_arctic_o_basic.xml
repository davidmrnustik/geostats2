<merge xmlns:android="http://schemas.android.com/apk/res/android">
	<TableLayout
        style="@style/TableLayout"
        android:layout_below="@+id/dTitle"
        android:shrinkColumns="0">
		    
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/TotalArea"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/TotalAreaRecordArcticO"/>
	    </TableRow>
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/Volume"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/VolumeRecordArcticO"/>
	    </TableRow>
	    <TableRow style="@style/TableRow">
	        <TextView 
	          	style="@style/TableTextView"
	            android:text="@string/AverageDepth"/>
	        <TextView 
	            style="@style/TableTextView.GravityRight"
	            android:text="@string/AverageDepthRecordArcticO"/>
	    </TableRow>
	    
	    <TableRow
	        style="@style/TableRow.Span">
	        <TextView 
	            style="@style/TableTextView.Bold"
	            android:layout_span="2"
	            android:text="@string/DeepestPoint"/>
	    </TableRow>
	    <TableRow style="@style/TableRow">
	        <TableLayout android:stretchColumns="0">
	            <TableRow>
			        <TextView 
			          	style="@style/TableTextView.PaddingTop0.PaddingBottom0"
			            android:text="@string/LitkeDeep"/>
	   			</TableRow>
	   			<TableRow>
			        <TextView 
			          	style="@style/TableTextView.RowSpan"
			            android:text="@string/EurasianBasin"/>
	   			</TableRow>
	        </TableLayout>
		    <TextView 
	          	style="@style/TableTextView.GravityRight.PaddingTop0"
	            android:layout_span="2"
	            android:text="@string/DeepestPointRecordArcticO"/>
		</TableRow>
        <TableRow style="@style/TableRow.Span">
            <TextView
                android:id="@+id/chartNo"
                android:layout_span="2"
                style="@style/TableTextView.Italic"
                android:text="@string/ChartArcticOBasic"/>
        </TableRow>

	</TableLayout>
</merge>